---json
{
  "permalink": "essays.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "Chris Hannah - Essays",
    "subtitle":"My little piece of the internet",
    "language": "en",
    "url": "https://chrishannah.me/",
    "author": {
      "name": "Chris Hannah",
      "email": "chris@chrishannah.me"
    }
  }
}
---

{% extends "layouts/base.njk" %}

{% block content %}
<article>
  <header>
    <h1>Essays</h1>
    <p class="large-text">Long-form thoughts on photography, tech, and personal observations</p>
  </header>

  <ul class="essay-list">
    {% for post in collections.essay | reverse %}
      <li class="essay-card">
        {% if post.data.image %}
        <img
          src="{{ post.data.image | image }}"
          alt="Essay thumbnail"
          class="essay-thumb"
          loading="lazy"
          width="56"
          height="56"
        >
        {% endif %}
        <div class="essay-info">
          <a href="{{ post.url }}" class="essay-title">{{ post.data.title }}</a>
          <div class="essay-meta">
            {{ post.date | dateFilter("d MMM yyyy") }} •
            {{ post.data.tags | filterTagList | join(" • ") }}
          </div>
          {% if post.data.summary %}
          <div class="essay-desc">{{ post.data.summary }}</div>
          {% endif %}
        </div>
      </li>
    {% endfor %}
  </ul>
</article>
{% endblock %}
