<article class="list-card h-entry link-listing">
  <div class="list-card-main">
    <h1 class="p-name list-card-title">
      <a href="{{ post.data.link | url }}">{{ post.data.title }} →</a>
    </h1>
    <div class="e-content">
      {{ post.content | safe }}
    </div>
    <div class="post-meta">
      <p><a style="display: none;" rel="author" class="p-author h-card" href="…">Chris Hannah</a>
      <time class="dt-published" datetime="{{ post.data.date }}">{{ post.data.date | displayDate }}</time>
      <a class="u-url" href="{{ post.url | url }}">Permalink</a></p>
    </div>
  </div>
  {% if post.data.image %}
    <img src="{{ post.data.image }}" alt="" class="list-card-image" />
  {% endif %}
</article>
