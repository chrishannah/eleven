<div class="bottom-section">
    <div class="section-head">
        <span class="section-title">System</span>
    </div>
    <div class="metric-row">
        <span class="metric-label">Site</span>
        <span class="metric-value live">{{ homepage.system.status }}</span>
    </div>
    <div class="metric-row">
        <span class="metric-label">Uptime</span>
        <span class="metric-value">{{ homepage.system.uptime }}</span>
    </div>
    <div class="metric-row">
        <span class="metric-label">Last deploy</span>
        <span class="metric-value" id="last-deploy" data-timestamp="{{ build.timestamp }}">--</span>
    </div>
    <div class="metric-row">
        <span class="metric-label">Build time</span>
        <span class="metric-value">{{ "" | buildDuration }}s</span>
    </div>
</div>
