        <style>
{% include "../../assets/css/style.css" %}
        </style>

        <link rel="me" href="https://micro.blog/ChrisHannah"/>
        <link rel="me" href="https://github.com/chrishannah"/>
        <link href="https://x.com/chrishannah" rel="me">
        <link rel="webmention" href="https://webmention.io/chrishannah.me/webmention"/>
        <link rel="pingback" href="https://webmention.io/chrishannah.me/xmlrpc"/>

        <!-- RSS Feeds -->
        <link rel="alternate" type="application/rss+xml" href="https://chrishannah.me/feed" title="Chris Hannah">

        <!-- Analytics -->
        <script src="https://tinylytics.app/embed/e7KoNsv_jq9FizddEYyk.js?hits&kudos=★" defer></script>

        <title>{{ title or "Chris Hannah" }}</title>
    </head>
    <body>

        <div class="home-container">
            <header class="home-header">
                <div class="header-content">
                    <span class="p-author h-card">
                        <img class="u-photo" src="{{ author.photo }}" alt="{{ author.name }}" width="100" height="100"/>
                        <a hidden class="u-url" rel="me" href="{{ author.url }}">{{ author.name }}</a>
                    </span>
                    <div class="header-text">
                        <h1>{{ site.title }}</h1>
                        <p class="tagline">Code, camera, keyboard.</p>
                    </div>
                </div>
                <nav role="navigation" aria-label="main navigation">
                    <a href="/about">About</a>
                    <a href="/contact">Contact</a>
                    <a href="/subscribe">Subscribe</a>
                    <span class="nav-separator">|</span>
                    <a href="https://codeandculture.uk" class="nav-external">Code and Culture</a>
                    <a href="https://journeysthroughglass.net" class="nav-external">Journeys Through Glass</a>
                </nav>
            </header>

            <main>
                <section class="links-section">
                    <h2>Links</h2>
                    <ul class="link-list">
                        {% set recentLinks = collections.link | reverse | limit(5) %}
                        {% for post in recentLinks %}
                        <li>
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                            <a href="{{ post.data.link }}" class="external-link" title="Visit original" aria-label="Visit original">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
                                    <polyline points="15 3 21 3 21 9"/>
                                    <line x1="10" y1="14" x2="21" y2="3"/>
                                </svg>
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                    <a href="/links/" class="section-more">All Links →</a>
                </section>

                <section class="writing-section">
                    <h2>Writing</h2>
                    <div class="blog-nav">
                        <a href="/page/1/">Latest Posts</a>
                        <a href="/archive">Full Archive</a>
                        <a href="/essays">Essays</a>
                    </div>

                    <div class="recent-posts">
                        {% set recentPosts = collections.post | reverse | limit(5) %}
                        {% for post in recentPosts %}
                        <article class="post-item">
                            <time class="post-date" datetime="{{ post.data.date }}">{{ post.data.date | displayDate }}</time>
                            <h3>
                                <a href="{{ post.url }}">{{ post.data.title or (post.content | microExcerpt) }}</a>
                            </h3>
                            <p class="post-excerpt">{{ post.content | excerpt | safe }}</p>
                        </article>
                        {% endfor %}
                    </div>
                </section>

                <section class="projects-section">
                    <h2>Projects</h2>
                    <div class="project-cards">
                        <div class="project-card">
